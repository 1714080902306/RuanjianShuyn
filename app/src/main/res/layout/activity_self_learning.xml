<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".functions.SelfLearningActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/bisque"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textSize="40dp"
        android:text="自主学习"
        />

    <TextView
        android:layout_alignBaseline="@+id/et_self_china"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:text="中文术语：" />
    <EditText
        android:id="@+id/et_self_china"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="160dp"
        android:hint="请输入中文术语：" />

    <View
        android:layout_width="233dp"
        android:layout_height="5px"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="200dp"
        android:background="@android:color/darker_gray" />
    <TextView
        android:id="@+id/tv_self_query"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="240dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"/>


    <Button
        android:id="@+id/bt_self_query"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/shape_button"
        android:text="查 询"
        android:textSize="20dp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/bt_self_back"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/shape_button"
        android:text="返 回"
        android:textSize="20dp"
        android:textColor="@color/white"/>


</RelativeLayout>