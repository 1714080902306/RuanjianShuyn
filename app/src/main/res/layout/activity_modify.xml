<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".functions.ModifyActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/bisque"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textSize="40dp"
        android:text="修改数据"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/et_modify_china"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:text="中文术语：" />
    <EditText
        android:id="@+id/et_modify_china"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="160dp"
        android:hint="请输入中文术语：" />

    <View
        android:layout_width="233dp"
        android:layout_height="5px"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="200dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/et_modify_english"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:text="英文术语：" />
    <EditText
        android:id="@+id/et_modify_english"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="220dp"
        android:hint="请输入中文术语：" />

    <View
        android:layout_width="233dp"
        android:layout_height="5px"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="260dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:text="相应解释：" />

    <EditText
        android:id="@+id/et_modify_explain"
        android:layout_width="280dp"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="100dp"
        android:layout_height="160dp"
        android:layout_marginTop="280dp"
        android:hint="请输入相应的解释："/>

    <Button
        android:id="@+id/bt_modify_query"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/shape_button"
        android:text="查 询"
        android:textSize="20dp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/bt_modify_ok"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/shape_button"
        android:text="修 改"
        android:textSize="20dp"
        android:textColor="@color/white"/>



</RelativeLayout>